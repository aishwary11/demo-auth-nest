{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "noEmitOnError": true,
    "rootDir": "./src",
    "sourceMap": false,
    "outDir": "./build",
    "baseUrl": "./",
    "incremental": false,
    "downlevelIteration": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ],
  "include": [
    "src"
  ]
}